{
  "swagger": "2.0",
  "info": {
    "title": "Bible Version server API",
    "description": "Bible Version server API",
    "version": "1.0.0",
    "contact": {
      "name": "DuckyMomo20012",
      "url": "https://github.com/DuckyMomo20012"
    }
  },
  "tags": [
    {
      "name": "VersionService"
    }
  ],
  "basePath": "/api",
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/version": {
      "get": {
        "summary": "Retrieve all versions",
        "operationId": "VersionService_GetAllVersion",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1GetAllVersionResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "language",
            "description": "Language filter (optional - indexed in Prisma)",
            "in": "query",
            "required": false,
            "type": "string"
          },
          {
            "name": "source",
            "description": "Source filter (optional - indexed in Prisma)",
            "in": "query",
            "required": false,
            "type": "string"
          },
          {
            "name": "formatType",
            "description": "Format type filter (optional - indexed in Prisma)",
            "in": "query",
            "required": false,
            "type": "string"
          }
        ],
        "tags": [
          "VersionService"
        ]
      }
    },
    "/v1/version/{versionCode}": {
      "get": {
        "summary": "Retrieve one version by unique constraint",
        "operationId": "VersionService_GetOneVersion",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1GetOneVersionResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "versionCode",
            "description": "Version code (required - part of unique constraint)",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "language",
            "description": "Language code (required - part of unique constraint)",
            "in": "query",
            "required": false,
            "type": "string"
          },
          {
            "name": "source",
            "description": "Source (required - part of unique constraint)",
            "in": "query",
            "required": false,
            "type": "string"
          },
          {
            "name": "formatType",
            "description": "Format type (required - part of unique constraint)",
            "in": "query",
            "required": false,
            "type": "string"
          }
        ],
        "tags": [
          "VersionService"
        ]
      }
    }
  },
  "definitions": {
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    },
    "v1GetAllVersionResponse": {
      "type": "object",
      "properties": {
        "versions": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/v1Version"
          },
          "title": "Version list"
        }
      }
    },
    "v1GetOneVersionResponse": {
      "type": "object",
      "properties": {
        "version": {
          "$ref": "#/definitions/v1Version",
          "title": "Version object"
        }
      }
    },
    "v1Version": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "title": "Version ID"
        },
        "code": {
          "type": "string",
          "title": "Version code"
        },
        "name": {
          "type": "string",
          "title": "Version name"
        },
        "language": {
          "type": "string",
          "title": "Version language"
        },
        "source": {
          "type": "string",
          "title": "Version source"
        },
        "formatType": {
          "type": "string",
          "title": "Version format type"
        },
        "sourceUrl": {
          "type": "string",
          "title": "Version source URL"
        },
        "hasOldTestament": {
          "type": "boolean",
          "title": "Version has old testament"
        },
        "hasNewTestament": {
          "type": "boolean",
          "title": "Version has new testament"
        },
        "hasApocrypha": {
          "type": "boolean",
          "title": "Version has apocrypha"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "title": "Version creation time\nStored in UTC and follows RFC 3339 format"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "title": "Version last update time\nStored in UTC and follows RFC 3339 format"
        }
      }
    }
  },
  "securityDefinitions": {
    "bearer": {
      "type": "apiKey",
      "description": "Authentication token, prefixed by Bearer: Bearer \u003ctoken\u003e",
      "name": "Authorization",
      "in": "header"
    }
  },
  "security": [
    {
      "bearer": []
    }
  ]
}
